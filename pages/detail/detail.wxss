.content {
  position: relative;
}
.content .arrowicon {
  position: absolute;
  z-index: 99;
  top: 0;
  left: 15rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
}
.content .topimg {
  position: relative;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}
.content .topimg .t-img {
  width: 100%;
}
.content .topimg .t-imgs {
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  filter: blur(5px);
}
.content .detail-content {
  width: 100%;
  background-color: #fff;
  border-radius: 30rpx;
  border-bottom-left-radius: 0rpx;
  border-bottom-right-radius: 0rpx;
  height: 100%;
  position: absolute;
  top: 349rpx;
  left: 0rpx;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
}
.content .detail-content .movie-info {
  display: flex;
}
.content .detail-content .movie-info .left-movieimg .movie-img {
  width: 210rpx;
  height: 322rpx;
  border-radius: 15rpx;
  position: relative;
  top: -68rpx;
}
.content .detail-content .movie-info .movie-infodetail {
  margin-left: 30rpx;
}
.content .detail-content .movie-info .movie-infodetail .de {
  display: block;
  font-size: 24rpx;
  color: #797f8d;
  line-height: 40rpx;
}
.content .detail-content .movie-info .movie-infodetail .movieName {
  color: #333;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}
.content .detail-content .movie-info .movie-infodetail .moviescorep {
  font-size: 20rpx;
}
.content .detail-content .movie-info .movie-infodetail .fontS {
  margin-left: 0;
  font-size: 30rpx;
  font-weight: bold;
  color: #fdca39;
}
.content .detail-content .movie-info .movie-infodetail .simg {
  width: 26rpx;
  height: 26rpx;
}
.content .detail-content .movie-desc {
  position: relative;
}
.content .detail-content .movie-desc .m-desc-title {
  font-size: 27rpx;
  color: #333;
  font-weight: bold;
}
.content .detail-content .movie-desc .m-desc-detail {
  font-size: 24rpx;
  color: #070e18;
  line-height: 48rpx;
  text-align: justify;
  display: -webkit-box;
}
.content .detail-content .movie-desc .m-open {
  color: #17b731;
  font-size: 24rpx;
  position: absolute;
  right: 0;
  bottom: 7rpx;
  background-color: #fff;
}
.content .detail-content .movie-desc .m-o-d {
  bottom: 7rpx;
}
.content .detail-content .movie-desc .text-ell {
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
