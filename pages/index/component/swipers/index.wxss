.content {
  margin: 40rpx 41rpx 0;
}
.content .swiper-title {
  display: flex;
  align-items: center;
}
.content .swiper-title .s-title {
  font-size: 43rpx;
  color: #333;
  font-weight: 700;
}
.content .swiper-title .s-tag {
  margin-left: 20rpx;
  font-size: 24rpx;
  background-color: #ffcd30;
  color: #fff;
  padding: 7rpx 20rpx;
  border-radius: 8rpx;
  font-weight: bold;
}
.content .swiper-content {
  width: 553rpx;
  height: 795rpx;
  margin-top: 40rpx;
  transform-style: preserve-3d;
  position: relative;
}
.content .swiper-content .swiper-image {
  position: absolute;
  width: 553rpx;
  height: 795rpx;
  border-radius: 30rpx;
  overflow: hidden;
}
.content .swiper-content .swiper-image:nth-child(1) {
  left: 0;
  z-index: 6;
  transform: scale(1);
  -webkit-transform: scale(1);
}
.content .swiper-content .swiper-image:nth-child(2) {
  left: 120rpx;
  z-index: 5;
  transform: scale(0.9);
  -webkit-transform: scale(0.9);
}
.content .swiper-content .swiper-image:nth-child(3) {
  left: 200rpx;
  z-index: 4;
  transform: scale(0.8);
  -webkit-transform: scale(0.8);
}
.content .swiper-content .swiper-image .movie-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(2px);
  -webkit-filter: blur(2px);
  z-index: 9999;
}
.content .swiper-content .movieimgfilter {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  filter: blur(2px);
  -webkit-filter: blur(2px);
}
.content .swiper-content .movie-desc {
  width: 100%;
  height: 166rpx;
  position: absolute;
  z-index: 99;
  bottom: 0;
  border-radius: 30rpx;
  border-top-left-radius: 0rpx;
  border-top-right-radius: 0rpx;
  background-position: center bottom;
  filter: blur(2px);
  -webkit-filter: blur(2px);
}
.content .swiper-content .movie-content {
  width: 100%;
  position: absolute;
  bottom: -14rpx;
  display: flex;
  z-index: 999;
  padding: 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.content .swiper-content .movie-content .movie-desc-title {
  color: #f5f5f5;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.content .swiper-content .movie-content .movie-desc-class {
  color: #f5f5f5;
  font-size: 22rpx;
  margin-bottom: 10rpx;
}
.content .swiper-content .movie-content .movie-desc-actor {
  color: #f5f5f5;
  font-size: 22rpx;
}
.content .swiper-content .movie-content .movie-desc-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.content .swiper-content .movie-content .movie-desc-right .movie-nums {
  font-size: 40rpx;
  font-weight: bold;
  color: #fac835;
}
.content .swiper-content .movie-content .movie-desc-right .movie-author {
  color: #8f9ca4;
  font-size: 19rpx;
}
@keyframes imgleftone {
  from {
    transform: scale(1);
    -webkit-transform: scale(1);
    left: 0rpx;
    z-index: 6;
    opacity: 1;
  }
  to {
    transform: scale(1);
    -webkit-transform: scale(1);
    z-index: 6;
    left: -500rpx;
    opacity: 0;
  }
}
@keyframes imglefttwo {
  from {
    transform: scale(0.9);
    left: 120rpx;
    z-index: 5;
  }
  to {
    transform: scale(1);
    left: 0rpx;
    z-index: 6;
  }
}
@keyframes imgleftthree {
  from {
    transform: scale(0.8);
    left: 200rpx;
    z-index: 4;
  }
  to {
    transform: scale(0.9);
    left: 120rpx;
    z-index: 5;
  }
}
@keyframes imgright1 {
  from {
    transform: scale(1);
    -webkit-transform: scale(1);
    left: -500rpx;
    z-index: 6;
    opacity: 0;
  }
  to {
    transform: scale(1);
    -webkit-transform: scale(1);
    left: 0rpx;
    z-index: 6;
    opacity: 1;
  }
}
@keyframes imgright2 {
  from {
    transform: scale(1);
    -webkit-transform: scale(1);
    left: 0rpx;
    z-index: 6;
  }
  to {
    transform: scale(0.9);
    -webkit-transform: scale(0.9);
    left: 120rpx;
    z-index: 5;
  }
}
@keyframes imgright3 {
  from {
    transform: scale(0.9);
    -webkit-transform: scale(0.9);
    left: 120rpx;
    opacity: 0.5;
    z-index: 5;
  }
  to {
    transform: scale(0.8);
    -webkit-transform: scale(0.8);
    left: 200rpx;
    opacity: 1;
    z-index: 4;
  }
}
.imgone {
  animation: imgleftone 800ms ease;
  -webkit-animation: imgleftone 800ms ease;
}
.imgtwo {
  animation: imglefttwo 800ms ease;
  -webkit-animation: imglefttwo 800ms ease;
}
.imgthree {
  animation: imgleftthree 800ms ease;
  -webkit-animation: imgleftthree 800ms ease;
}
.imgright1 {
  animation: imgright1 800ms ease;
  -webkit-animation: imgright1 800ms ease;
}
.imgright2 {
  animation: imgright2 800ms ease;
  -webkit-animation: imgright2 800ms ease;
}
.imgright3 {
  animation: imgright3 800ms ease;
  -webkit-animation: imgright3 800ms ease;
}
