.content {
  display: flex;
  margin: 40rpx 41rpx 0;
  justify-content: space-between;
  align-items: center;
}
.content .left-city {
  padding: 14rpx 24rpx;
  border-radius: 48rpx;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
}
.content .left-city .cityicon {
  width: 24rpx;
  height: 29rpx;
}
.content .left-city .cityname {
  font-size: 24rpx;
